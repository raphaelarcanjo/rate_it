<table class="table table-striped table-condensed table-bordered table-hover">
    <thead>
        <tr>
            <th>Author</th>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
        </tr>
    </thead>
    
    <tbody>
        {% for entertainment in entertainments %}
            <tr>
                <td>
                    {{ entertainment.author }}
                </td>
                <td>
                    {{ entertainment.name }}
                </td>
                <td>
                    {{ entertainment.year }}
                </td>
                <td>
                    {{ entertainment.genre }}
                </td>
                <td>
                    {{ include('layouts/elements/rating_stars.html.twig', {id: entertainment.id}) }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>